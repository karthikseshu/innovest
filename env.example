# Email Configuration
# For Gmail
EMAIL_HOST=gmail
EMAIL_SERVER=imap.gmail.com
EMAIL_PORT=993
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# For Outlook/Hotmail
# EMAIL_HOST=outlook
# EMAIL_SERVER=outlook.office365.com
# EMAIL_PORT=993
# EMAIL_USERNAME=your_email@outlook.com
# EMAIL_PASSWORD=your_password

# For Yahoo
# EMAIL_HOST=yahoo
# EMAIL_SERVER=imap.mail.yahoo.com
# EMAIL_PORT=993
# EMAIL_USERNAME=your_email@yahoo.com
# EMAIL_PASSWORD=your_app_password

# For Custom Domain (like bchainre.com)
# EMAIL_HOST=custom
# EMAIL_SERVER=mail.bchainre.com
# EMAIL_PORT=993
# EMAIL_USERNAME=ravi@bchainre.com
# EMAIL_PASSWORD=your_password

# For Custom Domain with different port
# EMAIL_HOST=custom
# EMAIL_SERVER=mail.bchainre.com
# EMAIL_PORT=587
# EMAIL_USERNAME=ravi@bchainre.com
# EMAIL_PASSWORD=your_password

# Database Configuration
DATABASE_URL=sqlite:///transactions.db

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
APP_NAME=Email Transaction Parser
APP_VERSION=1.0.0

# Parser Configuration
DEFAULT_PARSER=cashapp
SUPPORTED_PARSERS=["cashapp", "paypal", "venmo"]

# Supabase Configuration (for multi-account OAuth support)
# The email-reader will fetch email integrations from Supabase api.email_integrations table
# These values are hardcoded in config/supabase.py but can be overridden via env vars
# SUPABASE_URL=https://dshlixmkpqpdnnixkykl.supabase.co
# SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Google OAuth Configuration (for token refresh)
# These should match the credentials in: Supabase Dashboard → Authentication → Providers → Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Batch Job Security (Optional)
# If set, all /batch/* endpoints require X-API-Key header with this value
# If not set, batch endpoints are publicly accessible
BATCH_JOB_API_KEY=your_secret_batch_api_key_here
